{
    "name": "woeler/phpdiscord",
    "description": "A php library to use Discord webhooks and embeds.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Woeler",
            "email": "woeler@woeler.eu"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "Woeler\\DiscordPhp\\": "src/"
        }
    },
    "scripts": {
        "cgl": [
            "bin/php-cs-fixer fix --config .php_cs"
        ]
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "config": {
        "bin-dir": "bin/"
    }
}
